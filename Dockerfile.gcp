# Stage 1: Build the Go application binary
FROM golang:1.24.0 AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
WORKDIR /app/app/echo-server
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build -ldflags="-s -w" -o /out/echo-server main.go

# Stage 2: Minimal runtime (non-root, distroless)
FROM gcr.io/distroless/static:nonroot
COPY --from=builder /out/echo-server /echo-server
USER nonroot
ENTRYPOINT ["/echo-server"]
